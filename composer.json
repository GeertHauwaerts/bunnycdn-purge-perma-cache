{
  "name": "geerthauwaerts/bunnycdn-purge-perma-cache",
  "description": "BunnyCDN - Purge from Perma Cache",
  "keywords": [
    "bunnycdn",
    "purge",
    "perma-cache"
  ],
  "homepage": "https://github.com/geerthauwaerts/bunnycdn-purge-perma-cache",
  "license": "BSD-3-Clause",
  "authors": [
    {
      "name": "Geert Hauwaerts",
      "email": "geert@hauwaerts.be"
    }
  ],
  "require": {
    "php": ">=7.0",
    "guzzlehttp/guzzle": "^7.3",
    "platformcommunity/bunnycdn-storage": "^0.2.0",
    "ramsey/uuid": "^4.1"
  },
  "config": {
    "process-timeout": 0,
    "sort-packages": true
  },
  "autoload": {
    "psr-4": {
      "BunnyCDN\\Storage\\PermaCache\\": "app"
    }
  },
  "scripts": {
    "phpcs": "phpcs --standard=phpcs.xml --extensions=php app/",
    "start": "php -S 0.0.0.0:8000 -t public"
  },
  "require-dev": {
    "squizlabs/php_codesniffer": "^3.5"
  }
}
